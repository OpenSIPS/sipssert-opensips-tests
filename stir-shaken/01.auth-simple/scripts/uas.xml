<scenario name="Basic UAS responder">
  <!-- By adding rrs="true" (Record Route Sets), the route sets         -->
  <!-- are saved and used for following messages sent. Useful to test   -->
  <!-- against stateful SIP proxies/B2BUAs.                             -->
  <recv request="INVITE" crlf="true" rrs="true">
    <action>
      <ereg regexp=".+" search_in="hdr" header="Record-Route:" check_it="true" assign_to="dummy"/>
      <ereg regexp="," search_in="hdr" header="Record-Route:" check_it_inverse="true" assign_to="dummy"/>
      <ereg regexp=".+" search_in="hdr" header="Record-Route:" occurence="2" check_it_inverse="true" assign_to="dummy"/>
      <!-- there should only be no Route header -->
      <ereg regexp=".+" start_line="true" search_in="hdr" header="Route:" check_it_inverse="true" assign_to="dummy"/>
      <ereg regexp=".+" start_line="true" search_in="hdr" header="Identity:" check_it="true" assign_to="dummy"/>
    </action>
  </recv>

  <!-- 
  <pause milliseconds="10000"/>
  -->

  <send>
    <![CDATA[

      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:];tag=[service].[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port]>
      Content-Length: 0

    ]]>
  </send>

  <pause milliseconds="100"/>

  <send>
    <![CDATA[

      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[service].[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port]>
      Content-Length: 0

    ]]>
  </send>

  <pause milliseconds="1000"/>

  <!-- The '[last_*]' keyword is replaced automatically by the          -->
  <!-- specified header if it was present in the last message received  -->
  <!-- (except if it was a retransmission). If the header was not       -->
  <!-- present or if no message has been received, the '[last_*]'       -->
  <!-- keyword is discarded, and all bytes until the end of the line    -->
  <!-- are also discarded.                                              -->
  <!--                                                                  -->
  <!-- If the specified header was present several times in the         -->
  <!-- message, all occurences are concatenated (CRLF seperated)        -->
  <!-- to be used in place of the '[last_*]' keyword.                   -->
  <!--
  -->
   <send retrans="500">
    <![CDATA[

      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[service].[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      [last_Record-Route:]
      Contact: <sip:[local_ip]:[local_port]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=-
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0
      a=rtpmap:0 PCMU/8000

    ]]>
  </send>

  <recv request="ACK"
        rtd="true"
        crlf="true">
    <action>
      <ereg regexp=".+" search_in="hdr" header="Record-Route:" check_it_inverse="true" assign_to="dummy"/>
      <ereg regexp="," search_in="hdr" header="Record-Route:" check_it_inverse="true" assign_to="dummy"/>
      <ereg regexp=".+" search_in="hdr" header="Record-Route:" occurence="2" check_it_inverse="true" assign_to="dummy"/>
      <!-- there should only be no Route header -->
      <ereg regexp=".+" start_line="true" search_in="hdr" header="Route:" check_it_inverse="true" assign_to="dummy"/>
    </action>
  </recv>

  <recv request="BYE" crlf="true" rrs="true">
    <action>
      <ereg regexp=".+" search_in="hdr" header="Record-Route:" check_it_inverse="true" assign_to="dummy"/>
      <ereg regexp="," search_in="hdr" header="Record-Route:" check_it_inverse="true" assign_to="dummy"/>
      <ereg regexp=".+" search_in="hdr" header="Record-Route:" occurence="2" check_it_inverse="true" assign_to="dummy"/>
      <!-- there should only be no Route header -->
      <ereg regexp=".+" start_line="true" search_in="hdr" header="Route:" check_it_inverse="true" assign_to="dummy"/>
    </action>
  </recv>

  <send retrans="500">
    <![CDATA[

      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      [last_Record-Route:]
      Contact: <sip:[local_ip]:[local_port]>
      Content-Length: 0
    ]]>
  </send>


  <!-- Keep the call open for a while in case the 200 is lost to be     -->
  <!-- able to retransmit it if we receive the BYE again.               -->

<!--  <pause milliseconds="10"/> -->

  <!-- Pause 8 seconds, which is approximately the duration of the      -->
  <!-- PCAP file                                                        -->
<!--  <pause milliseconds="8000"/> -->

  <!-- definition of the response time repartition table (unit is ms)   -->
  <ResponseTimeRepartition value="200, 500"/>

  <!-- definition of the call length repartition table (unit is ms)     -->
  <CallLengthRepartition value="500, 1000, 2000, 3000"/>

  <Reference variables="dummy"/>

</scenario>
